<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- =====================================================
             LISTE VIEW - Écrans de Cuisine
             ===================================================== -->
        <record id="view_kitchen_screen_list" model="ir.ui.view">
            <field name="name">kitchen.screen.list</field>
            <field name="model">kitchen.screen</field>
            <field name="arch" type="xml">
                <list string="Écrans Cuisine" default_order="sequence,name">
                    <field name="sequence" widget="handle"/>
                    <field name="name" string="Nom"/>
                    <field name="screen_type" string="Type"/>
                    <field name="pos_config_id" string="Configuration POS"/>
                    <field name="pos_categ_ids" widget="many2many_tags" string="Catégories"/>
                    <field name="pending_orders_count" string="En attente" decoration-warning="pending_orders_count > 0"/>
                    <field name="ready_orders_count" string="Prêtes" decoration-success="ready_orders_count > 0"/>
                    <field name="sound_enabled" string="Sons" widget="boolean_toggle"/>
                    <field name="active" invisible="1"/>
                </list>
            </field>
        </record>

        <!-- =====================================================
             FORM VIEW - Détails Écran de Cuisine
             ===================================================== -->
        <record id="view_kitchen_screen_form" model="ir.ui.view">
            <field name="name">kitchen.screen.form</field>
            <field name="model">kitchen.screen</field>
            <field name="arch" type="xml">
                <form string="Écran Cuisine">
                    <header>
                        <button name="action_open_screen"
                                string="Ouvrir l'écran"
                                type="object"
                                class="oe_highlight"
                                icon="fa-desktop"
                                help="Ouvre l'interface de l'écran cuisine dans un nouvel onglet"/>
                        <button name="action_test_notification"
                                string="Test notification"
                                type="object"
                                icon="fa-bell"
                                help="Envoie une notification de test à l'écran"/>
                    </header>

                    <sheet>
                        <!-- Boutons de statistiques -->
                        <div class="oe_button_box" name="button_box">
                            <button name="toggle_active"
                                    type="object"
                                    class="oe_stat_button"
                                    icon="fa-archive">
                                <field name="active"
                                       widget="boolean_button"
                                       options='{"terminology": "archive"}'/>
                            </button>

                            <button class="oe_stat_button"
                                    type="object"
                                    name="action_open_screen"
                                    icon="fa-clock-o">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_value">
                                        <field name="pending_orders_count"/>
                                    </span>
                                    <span class="o_stat_text">En attente</span>
                                </div>
                            </button>

                            <button class="oe_stat_button"
                                    type="object"
                                    name="action_open_screen"
                                    icon="fa-check-circle-o">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_value">
                                        <field name="ready_orders_count"/>
                                    </span>
                                    <span class="o_stat_text">Prêtes</span>
                                </div>
                            </button>

                            <button class="oe_stat_button"
                                    type="object"
                                    name="action_open_screen"
                                    icon="fa-calendar">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_value">
                                        <field name="total_orders_today"/>
                                    </span>
                                    <span class="o_stat_text">Aujourd'hui</span>
                                </div>
                            </button>
                        </div>

                        <!-- Informations principales -->
                        <group>
                            <group string="Informations générales">
                                <field name="name" placeholder="Ex: Cuisine Principale, Bar, Pâtisserie"/>
                                <field name="sequence"/>
                                <field name="screen_type"/>
                            </group>
                            <group string="Configuration">
                                <field name="pos_config_id"
                                       options="{'no_create': True, 'no_open': True}"
                                       placeholder="Tous les POS (si vide)"/>
                                <field name="sound_enabled" widget="boolean_toggle"/>
                            </group>
                        </group>

                        <!-- Notebook avec onglets -->
                        <notebook>
                            <!-- Onglet 1: Catégories POS -->
                            <page string="Catégories POS" name="categories">
                                <field name="pos_categ_ids" widget="many2many">
                                    <list>
                                        <field name="name"/>
                                        <field name="sequence"/>
                                    </list>
                                </field>
                                <div class="alert alert-info mt16" role="alert">
                                    <p>
                                        <i class="fa fa-info-circle"/>
                                        <strong>Info:</strong> Les produits appartenant à ces catégories seront automatiquement
                                        affichés sur cet écran lorsqu'ils sont commandés.
                                    </p>
                                    <p class="mb0">
                                        <strong>Exemple:</strong> Si vous sélectionnez les catégories "Plats" et "Pizzas",
                                        toutes les commandes contenant ces produits apparaîtront ici.
                                    </p>
                                </div>
                            </page>

                            <!-- Onglet 2: Configuration des Sons -->
                            <page string="Sons et Notifications" name="sounds">
                                <group>
                                    <group string="Paramètres audio">
                                        <field name="sound_enabled" widget="boolean_toggle"/>
                                        <field name="sound_file"
                                               modifiers="{'invisible': [('sound_enabled', '=', False)]}"/>
                                        <field name="sound_volume"
                                               widget="integer"
                                               modifiers="{'invisible': [('sound_enabled', '=', False)]}"/>
                                    </group>
                                    <group string="Son personnalisé"
                                           modifiers="{'invisible': ['|', ('sound_enabled', '=', False), ('sound_file', '!=', 'custom')]}">
                                        <field name="custom_sound_url"
                                               placeholder="Ex: /module_name/static/src/sounds/custom.mp3"
                                               modifiers="{'required': [('sound_file', '=', 'custom')]}"/>
                                    </group>
                                </group>

                                <div class="alert alert-warning mt16" role="alert"
                                     modifiers="{'invisible': [('sound_enabled', '=', False)]}">
                                    <p>
                                        <i class="fa fa-volume-up"/>
                                        <strong>Volume:</strong> Valeur entre 0 et 100 (par défaut: 50)
                                    </p>
                                    <p class="mb0">
                                        <strong>Note:</strong> Les notifications sonores se déclenchent lors de:
                                    </p>
                                    <ul class="mb0">
                                        <li>Nouvelle commande reçue</li>
                                        <li>Commande acceptée</li>
                                        <li>Commande prête</li>
                                        <li>Commande annulée</li>
                                    </ul>
                                </div>

                                <div class="alert alert-info mt16" role="alert"
                                     modifiers="{'invisible': [('sound_file', '!=', 'custom')]}">
                                    <p class="mb0">
                                        <i class="fa fa-lightbulb-o"/>
                                        <strong>Astuce:</strong> Pour utiliser un son personnalisé, placez votre fichier audio
                                        dans le dossier <code>static/src/sounds/</code> de votre module et entrez le chemin complet.
                                    </p>
                                </div>
                            </page>

                            <!-- Onglet 3: Statistiques -->
                            <page string="Statistiques" name="stats">
                                <group>
                                    <group string="Commandes actuelles">
                                        <field name="pending_orders_count" readonly="1"/>
                                        <field name="ready_orders_count" readonly="1"/>
                                    </group>
                                    <group string="Historique">
                                        <field name="total_orders_today" readonly="1"/>
                                    </group>
                                </group>

                                <div class="alert alert-success mt16" role="alert">
                                    <p class="mb0">
                                        <i class="fa fa-line-chart"/>
                                        Les statistiques sont calculées en temps réel et se basent sur les catégories
                                        de produits sélectionnées dans l'onglet "Catégories POS".
                                    </p>
                                </div>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- =====================================================
             SEARCH VIEW - Recherche et Filtres
             ===================================================== -->
        <record id="view_kitchen_screen_search" model="ir.ui.view">
            <field name="name">kitchen.screen.search</field>
            <field name="model">kitchen.screen</field>
            <field name="arch" type="xml">
                <search string="Rechercher Écrans">
                    <!-- Champs de recherche -->
                    <field name="name" string="Nom" filter_domain="[('name', 'ilike', self)]"/>
                    <field name="pos_config_id" string="Configuration POS"/>
                    <field name="pos_categ_ids" string="Catégories"/>
                    <field name="screen_type" string="Type"/>

                    <!-- Filtres prédéfinis -->
                    <filter string="Cuisine" name="filter_kitchen"
                            domain="[('screen_type', '=', 'kitchen')]"
                            help="Afficher uniquement les écrans de type Cuisine"/>

                    <filter string="Bar" name="filter_bar"
                            domain="[('screen_type', '=', 'bar')]"
                            help="Afficher uniquement les écrans de type Bar"/>

                    <filter string="Pâtisserie" name="filter_pastry"
                            domain="[('screen_type', '=', 'pastry')]"
                            help="Afficher uniquement les écrans de type Pâtisserie"/>

                    <filter string="Grill" name="filter_grill"
                            domain="[('screen_type', '=', 'grill')]"
                            help="Afficher uniquement les écrans de type Grill"/>

                    <separator/>

                    <filter string="Actifs" name="filter_active"
                            domain="[('active', '=', True)]"
                            help="Afficher uniquement les écrans actifs"/>

                    <filter string="Archivés" name="filter_inactive"
                            domain="[('active', '=', False)]"
                            help="Afficher uniquement les écrans archivés"/>

                    <separator/>

                    <filter string="Sons activés" name="filter_sound_enabled"
                            domain="[('sound_enabled', '=', True)]"
                            help="Écrans avec notifications sonores activées"/>

                    <separator/>

                    <!-- Groupements -->
                    <group expand="0" string="Grouper par">
                        <filter string="Type d'écran" name="group_type"
                                context="{'group_by': 'screen_type'}"/>
                        <filter string="Configuration POS" name="group_pos"
                                context="{'group_by': 'pos_config_id'}"/>
                        <filter string="Sons activés" name="group_sound"
                                context="{'group_by': 'sound_enabled'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- =====================================================
             KANBAN VIEW - Vue en cartes
             ===================================================== -->
        <record id="view_kitchen_screen_kanban" model="ir.ui.view">
            <field name="name">kitchen.screen.kanban</field>
            <field name="model">kitchen.screen</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile">
                    <field name="name"/>
                    <field name="screen_type"/>
                    <field name="pending_orders_count"/>
                    <field name="ready_orders_count"/>
                    <field name="sound_enabled"/>
                    <field name="active"/>

                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                        <span class="badge badge-pill" t-att-class="record.screen_type.raw_value === 'kitchen' ? 'badge-primary' : 'badge-info'">
                                            <field name="screen_type"/>
                                        </span>
                                    </div>
                                    <div class="o_kanban_record_top_right">
                                        <i t-if="record.sound_enabled.raw_value" class="fa fa-volume-up text-success" title="Sons activés"/>
                                        <i t-else="" class="fa fa-volume-off text-muted" title="Sons désactivés"/>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div class="row">
                                        <div class="col-6">
                                            <button name="action_open_screen" type="object" class="btn btn-primary btn-sm">
                                                <i class="fa fa-desktop"/> Ouvrir
                                            </button>
                                        </div>
                                        <div class="col-6 text-right">
                                            <span class="badge badge-warning">
                                                <field name="pending_orders_count"/> en attente
                                            </span>
                                            <br/>
                                            <span class="badge badge-success">
                                                <field name="ready_orders_count"/> prêtes
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- =====================================================
             ACTION - Fenêtre principale
             ===================================================== -->
        <record id="action_kitchen_screen_window" model="ir.actions.act_window">
            <field name="name">Écrans Cuisine</field>
            <field name="res_model">kitchen.screen</field>
            <field name="view_mode">kanban,list,form</field>
            <field name="context">{'search_default_filter_active': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Créez votre premier écran cuisine !
                </p>
                <p>
                    Les écrans de cuisine vous permettent d'afficher automatiquement les commandes
                    en fonction des catégories de produits.
                </p>
                <p>
                    <strong>Comment ça marche ?</strong>
                </p>
                <ol>
                    <li>Créez un écran (ex: "Cuisine", "Bar", "Pâtisserie")</li>
                    <li>Sélectionnez les catégories de produits POS concernées</li>
                    <li>Cliquez sur "Ouvrir l'écran" pour lancer l'interface</li>
                    <li>Les commandes seront automatiquement routées vers le bon écran !</li>
                </ol>
            </field>
        </record>

        <!-- =====================================================
             MENUS
             ===================================================== -->

         <menuitem id="menu_kitchen_screen_root"
                  name="Écrans Cuisine"
                  parent="point_of_sale.menu_point_root"
                  sequence="10"
                  groups="point_of_sale.group_pos_manager,point_of_sale.group_pos_user"/>

        <menuitem id="menu_kitchen_screen"
                  name="Écrans"
                  parent="menu_kitchen_screen_root"
                  action="action_kitchen_screen_window"
                  sequence="10"/>

        <menuitem id="menu_kitchen_screen_config"
                  name="Configuration"
                  parent="menu_kitchen_screen_root"
                  sequence="90"
                  groups="point_of_sale.group_pos_manager"/>

    </data>
</odoo>